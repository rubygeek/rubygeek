<h1>Listing weathers</h1>

<table>
  <tr>
    <th>Zipcode</th>
    <th>City</th>
    <th>Region</th>
    <th>Temperature high</th>
    <th>Temperature low</th>
    <th>Temperature units</th>
    <th>Link</th>
    <th>Recorded at</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% @weathers.each do |weather| %>
  <tr>
    <td><%=h weather.zipcode %></td>
    <td><%=h weather.city %></td>
    <td><%=h weather.region %></td>
    <td><%=h weather.temperature_high %></td>
    <td><%=h weather.temperature_low %></td>
    <td><%=h weather.temperature_units %></td>
    <td><%=h weather.link %></td>
    <td><%=h weather.recorded_at %></td>
    <td><%=h weather.created_at %></td>
    <td><%=h weather.updated_at %></td>
    <td><%= link_to 'Show', weather %></td>
    <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
    <td><%= link_to 'Destroy', weather, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New weather', new_weather_path %>