!!! Strict
%html
  %head
    %title Pomodoro Task Manager App
    %link(rel="stylesheet" type="text/css" media="all" href="stylesheets/application.css")

  %body
    #timer
      %a#button-5-break.button(href="/") 5
      %a#button-25-break.button(href="/") 25
      %a#button-25.button(href="/") 25
      
      #timer-bar
      #timer-log

    #task-header
      %a#add

    #tasks
      %ul
        %li.task
          .handle
          %form(class="task")
            %input(type="text" name="name" class="textfield")
          .completion
            %a(href="/")
            %a(href="/")
            %a(href="/")
