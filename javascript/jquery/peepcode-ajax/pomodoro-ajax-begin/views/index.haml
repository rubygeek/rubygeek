            %a(href="/")
            %a(href="/")

    #task-footer

    #report

    #ajax-status

    %form#login(action="/sessions" method="post")
      %label(for="username")
        Username
        %input(type="text" name="username")
      %label(for="password")
        Password
        %input(type="password" name="password")
      %input(type="submit" value="Login")
      

    %script(src="javascripts/jquery-1.4.js")
    %script(src="javascripts/jquery-ui-1.7.2.custom.min.js")
    %script(src="javascripts/json2.js")
    %script(src="javascripts/jquery.roundCorners.js")
    %script(src="javascripts/application.js")

